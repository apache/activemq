      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </dependencySet>
    <dependencySet>
      <outputDirectory>lib/extra</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <useTransitiveFiltering>true</useTransitiveFiltering>
      <includes>
        <!-- mqtt -->
        <include>org.fusesource.mqtt-client:mqtt-client</include>

