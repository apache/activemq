      </includes>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </dependencySet>
    <dependencySet>
      <outputDirectory>lib/web</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <includes>
