      <outputDirectory>bin</outputDirectory>
      <unpack>false</unpack>
      <outputFileNameMapping>activemq.jar</outputFileNameMapping>
      <includes>
        <include>${pom.groupId}:activemq-run</include>
      </includes>
      <fileMode>0644</fileMode>
    </dependencySet>

