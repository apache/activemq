    <!--  Use the following to set the broker memory limit (in bytes)
  	<memoryManager>  
	  	<usageManager id="memory-manager" limit="1048576"/>
  	</memoryManager>
  	-->
  	
	<!-- Use the following to configure how ActiveMQ is exposed in JMX
